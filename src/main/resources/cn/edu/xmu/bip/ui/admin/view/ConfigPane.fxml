<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cn.edu.xmu.bip.ui.admin.presenter.ConfigPresenter">
    <TitledPane collapsible="false" text="后端环境">
        <VBox spacing="8.0">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
            </padding>
            <HBox spacing="8.0">
                <RadioButton fx:id="rbRd" id="rd" text="RD">
                    <toggleGroup>
                        <ToggleGroup fx:id="tgEnv"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="rbQa" id="qa" text="QA" toggleGroup="$tgEnv"/>
                <RadioButton fx:id="rbProd" id="prod" text="PROD" toggleGroup="$tgEnv"/>
                <RadioButton fx:id="rbCustom" id="custom" text="自定义" toggleGroup="$tgEnv"/>
            </HBox>
            <GridPane vgap="8.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
                <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                       text="API：" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="tfApi" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                       text="WebSocket：" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="tfWs" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
                <Button fx:id="btnSave" text="保存"/>
                <Label fx:id="lblHint1" textFill="#ff0000"/>
            </HBox>
        </VBox>
    </TitledPane>
    <TitledPane collapsible="false" text="窗口信息">
        <VBox spacing="8.0">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
            </padding>
            <GridPane vgap="8.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
                <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                       text="编号：" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="tfNumber" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                       text="名称：" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="tfName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                       text="绑定网卡：" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <HBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <ChoiceBox fx:id="cbNic"/>
                    <Button fx:id="btnRefresh" text="刷新"/>
                </HBox>
                <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                       text="MAC地址：" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="tfMac" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                       text="IP地址：" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="tfIp" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
                <Button fx:id="btnSubmit" text="提交"/>
                <Label fx:id="lblHint2" textFill="#ff0000"/>
            </HBox>
        </VBox>
    </TitledPane>
</VBox>
