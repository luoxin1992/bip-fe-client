<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER" spacing="8.0"
      fx:controller="cn.edu.xmu.bip.ui.admin.presenter.DataBrowsingPresenter">
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
    </padding>
    <AnchorPane>
        <HBox alignment="CENTER_LEFT" spacing="8.0" AnchorPane.leftAnchor="0">
            <RadioButton id="fingerprint-log" text="指纹(扫描仪)日志表">
                <toggleGroup>
                    <ToggleGroup fx:id="tgTable"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton id="message-log" text="消息日志表" toggleGroup="$tgTable"/>
            <RadioButton id="resource" text="资源表" toggleGroup="$tgTable"/>
        </HBox>
        <Label fx:id="lblHint" textFill="#ff0000" AnchorPane.rightAnchor="0"/>
    </AnchorPane>
    <Separator/>
    <HBox alignment="CENTER_LEFT" spacing="8.0">
        <Label text="开始日期："/>
        <DatePicker fx:id="dpStart" editable="false"/>
        <Label text="结束日期："/>
        <DatePicker fx:id="dpEnd" editable="false"/>
        <Button fx:id="btnQuery" text="查询"/>
    </HBox>
    <TableView fx:id="tvFingerprintLog" managed="false" visible="false">
        <columns>
            <TableColumn fx:id="tcFingerprintLogId" sortable="false" text="ID"/>
            <TableColumn fx:id="tcFingerprintLogType" sortable="false" text="Type"/>
            <TableColumn fx:id="tcFingerprintLogContent" sortable="false" text="Content"/>
            <TableColumn fx:id="tcFingerprintLogTimestamp" sortable="false" text="Timestamp"/>
        </columns>
    </TableView>
    <TableView fx:id="tvMessageLog" managed="false" visible="false">
        <columns>
            <TableColumn fx:id="tcMessageLogId" sortable="false" text="ID"/>
            <TableColumn fx:id="tcMessageLogType" sortable="false" text="Type"/>
            <TableColumn fx:id="tcMessageLogBody" sortable="false" text="Body"/>
            <TableColumn fx:id="tcMessageLogTimestamp" sortable="false" text="Timestamp"/>
        </columns>
    </TableView>
    <TableView fx:id="tvResource" managed="false" visible="false">
        <columns>
            <TableColumn fx:id="tcResourceId" sortable="false" text="ID"/>
            <TableColumn fx:id="tcResourceType" sortable="false" text="Type"/>
            <TableColumn fx:id="tcResourceUrl" sortable="false" text="Url"/>
            <TableColumn fx:id="tcResourcePath" sortable="false" text="Path"/>
            <TableColumn fx:id="tcResourceMd5" sortable="false" text="MD5"/>
            <TableColumn fx:id="tcResourceTimestamp" sortable="false" text="Timestamp"/>
            <TableColumn fx:id="tcResourceStatus" sortable="false" text="Status"/>
        </columns>
    </TableView>
</VBox>
