<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="8.0" fx:controller="cn.edu.xmu.bip.ui.admin.presenter.DataBrowsingPresenter">
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
    </padding>
    <HBox spacing="8.0" alignment="CENTER_LEFT">
        <RadioButton id="fingerprint-log" text="指纹(扫描仪)日志表">
            <toggleGroup>
                <ToggleGroup fx:id="tgTable"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton id="message-log" text="消息日志表" toggleGroup="$tgTable"/>
        <RadioButton id="resource" text="资源表" toggleGroup="$tgTable"/>
        <Separator orientation="VERTICAL"/>
        <HBox alignment="CENTER_LEFT">
            <Label text="结果共"/>
            <Label fx:id="lblTotalPage" text="0"/>
            <Label text="页，当前第"/>
            <Label fx:id="lblCurrentPage" text="0"/>
            <Label text="页"/>
        </HBox>
        <Button fx:id="btnPrevPage" disable="true" text="上一页"/>
        <Button fx:id="btnNextPage" disable="true" text="下一页"/>
    </HBox>
    <Separator/>
    <HBox spacing="8.0" alignment="CENTER_LEFT">
        <Label text="开始时间："/>
        <DatePicker fx:id="dpStart" editable="false"/>
        <Label text="结束时间："/>
        <DatePicker fx:id="dpEnd" editable="false"/>
        <Button fx:id="btnQuery" disable="true" text="查询"/>
    </HBox>
    <TableView fx:id="tvFingerprintLog">
        <columns>
            <TableColumn fx:id="tcFingerprintLogId" sortable="false" text="ID"/>
            <TableColumn fx:id="tcFingerprintLogType" sortable="false" text="Type"/>
            <TableColumn fx:id="tcFingerprintLogContent" sortable="false" text="Content"/>
            <TableColumn fx:id="tcFingerprintLogTimestamp" sortable="false" text="Timestamp"/>
        </columns>
    </TableView>
    <TableView fx:id="tvMessageLog" visible="false" managed="false">
        <columns>
            <TableColumn fx:id="tcMessageLogId" sortable="false" text="ID"/>
            <TableColumn fx:id="tcMessageLogType" sortable="false" text="Type"/>
            <TableColumn fx:id="tcMessageLogBody" sortable="false" text="Body"/>
            <TableColumn fx:id="tcMessageLogTimestamp" sortable="false" text="Timestamp"/>
        </columns>
    </TableView>
    <TableView fx:id="tvResource" visible="false" managed="false">
        <columns>
            <TableColumn fx:id="tcResourceId" sortable="false" text="ID"/>
            <TableColumn fx:id="tcResourceType" sortable="false" text="Type"/>
            <TableColumn fx:id="tcResourceUrl" sortable="false" text="Url"/>
            <TableColumn fx:id="tcResourcePath" sortable="false" text="Path"/>
            <TableColumn fx:id="tcResourceFilename" sortable="false" text="Filename"/>
            <TableColumn fx:id="tcResourceMd5" sortable="false" text="MD5"/>
            <TableColumn fx:id="tcResourceTimestamp" sortable="false" text="Timestamp"/>
        </columns>
    </TableView>
</VBox>
